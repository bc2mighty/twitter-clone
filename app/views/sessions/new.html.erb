<div class="container-fluid">        
    <div class="row">
        
            <div class="jumbotron jumbotron-fluid ">
                <div class="container">
                    <div class="logo-section text-center">
                        <i class="lab la-twitter twit"></i>
                        <span class="display-5">Log in to Tweeter</span>
                        
                    </div>
                    <%= form_for(:session, url: login_path) do |form| %>
                        <% if flash[:errors] %>    
                        <p class="alert alert-danger" role="alert"> <%= flash[:errors] %></p>   
                        <%end%>
                        <% if flash[:warning] %>    
                        <p class="alert alert-warning" role="alert"> <%= flash[:warning] %></p>   
                        <%end%>

                        <div class="form-group">
                        <%= form.label :email, :class => 'auth-label' %>
                        <%= form.text_field :email,  :class => 'form-control', :placeholder => "Email" %>
                        </div>

                        <div class="form-group">
                        <%= form.label :password %>
                        <%= form.password_field :password, :class => 'form-control', :placeholder => "Password" %>
                        <%= link_to "forgot password", new_password_reset_path %>
                        </div>
                        <div class="form-group">
                        <%= form.label :remember_me %>
                        <%= form.check_box :remember_me, :class => ''%>                       
                        </div>
                        <br>
                        <div class="actions">
                        <%= form.submit 'Login', class: 'btn btn-primary submit' %>
                        </div>
                        <br>
                        <% end %>

                        <p >New user ? <%= link_to "Sign up now!", new_user_path, class: "" %></p>
                        <br>              
                </div>
              

        </div>
       
    </div>
</div>