<div class="container-fluid">        
    <div class="row">
        
            <div class="jumbotron jumbotron-fluid ">
                <div class="container">
                    <div class="logo-section text-center">
                        <i class="lab la-twitter twit"></i>
                        <span class="display-5">Forgot password</span>
                        
                    </div>
                    <%= form_for(:password_reset, url: password_resets_path) do |form| %>                        

                        <div class="form-group">
                        <%= form.label :email, :class => 'auth-label' %>
                        <%= form.text_field :email,  :class => 'form-control', :placeholder => "Email" %>
                        </div>                        
                        <br>
                        <div class="actions">
                        <%= form.submit 'Submit', class: 'btn btn-primary submit' %>
                        </div>
                        <br>
                    <% end %>                       
                </div>
              

        </div>
       
    </div>
</div>